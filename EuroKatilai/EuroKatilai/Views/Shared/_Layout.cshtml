                    <li><a href="#">Pristatymo sąlygos</a></li>
                    <li><a href="#">Produktų garantija</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container footer-privacy-policy" style="color: white">&copy; 2024 - EUROKATILAI</div>
</footer>

<script src="~/js/chatBot.js"></script>

<script src="~/js/miniNavBarDisplay.js"></script>
<script src="~/js/changingTextNavBarDisplay.js"></script>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@* <script src="~/js/search.js"></script> *@
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>